<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/easy_level"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.azad.sudoku.EasyLevel">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/row1">

            <EditText
                android:ems="10"
                android:id="@+id/E11"
                android:width="1dp"
                android:background="@drawable/border"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />

            <EditText
                android:ems="10"
                android:id="@+id/E12"
                android:width="1dp"
                android:background="@drawable/border"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />

            <EditText
                android:ems="10"
                android:id="@+id/E13"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />

            <EditText
                android:ems="10"
                android:id="@+id/E14"
                android:width="1dp"
                android:background="@drawable/border"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="3"
                android:editable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:ems="10"
                android:id="@+id/E21"
                android:width="1dp"
                android:text="3"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="false" />

            <EditText
                android:ems="10"
                android:id="@+id/E22"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="2"
                android:editable="false" />

            <EditText
                android:ems="10"
                android:id="@+id/E23"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="4"
                android:editable="false" />

            <EditText
                android:ems="10"
                android:id="@+id/E24"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:ems="10"
                android:id="@+id/E31"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />

            <EditText
                android:ems="10"
                android:id="@+id/E32"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="4"
                android:editable="false" />

            <EditText
                android:ems="10"
                android:id="@+id/E33"
                android:width="1dp"
                android:background="@drawable/border"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="3"
                android:editable="false" />

            <EditText
                android:ems="10"
                android:id="@+id/E34"
                android:width="1dp"
                android:text="2"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border">

            <EditText
                android:ems="10"
                android:id="@+id/E41"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="2"
                android:editable="false" />

            <EditText
                android:ems="10"
                android:id="@+id/E42"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />

            <EditText
                android:ems="10"
                android:id="@+id/E43"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />

            <EditText
                android:ems="10"
                android:id="@+id/E44"
                android:width="1dp"
                android:background="@drawable/border"
                android:textAlignment="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:editable="true" />
        </TableRow>
    </TableLayout>

    <Button
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheckButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="CheckButton" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/CheckButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/easychronometer" />
</RelativeLayout>
