<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_easy_mid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.azad.sudoku.EasyMidActivity">

    <TextView
        android:text="Which Level do you want to choose?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/textView" />

    <Button
        android:text="Stage 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnStage2"
        android:layout_alignLeft="@+id/BtnStage2"
        android:layout_alignStart="@+id/BtnStage2"
        android:layout_marginTop="48dp"
        android:id="@+id/BtnStage3"
        android:onClick="Stage3Click" />

    <Button
        android:text="Stage 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/btnStage1"
        android:onClick="Stage1Click"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Stage 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnStage2"
        android:onClick="Stage2Click"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnStage1"
        android:layout_alignStart="@+id/btnStage1" />
</RelativeLayout>
