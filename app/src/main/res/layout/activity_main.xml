<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.azad.sudoku.MainActivity">

    <TextView
        android:text="For new game just push play button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/TextPlay" />

    <Button
        android:text="Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/PlayButton"
        android:onClick="PlayButton" />

    <Button
        android:text="Help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HelpButton"
        android:layout_below="@+id/PlayButton"
        android:layout_alignLeft="@+id/PlayButton"
        android:layout_alignStart="@+id/PlayButton"
        android:layout_marginTop="11dp"
        android:onClick="HelpButton" />

    <Button
        android:text="About Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AboutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/TextPlay"
        android:layout_alignStart="@+id/TextPlay"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:onClick="AboutButton" />

    <Button
        android:text="Score Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/TextPlay"
        android:layout_alignEnd="@+id/TextPlay"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:onClick="ScoreButton" />

    <Button
        android:text="Purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BuyButton"
        android:layout_above="@+id/AboutButton"
        android:layout_centerHorizontal="true"
        android:onClick="BuyButton" />
</RelativeLayout>
